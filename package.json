{
  "name": "@remix-pwa/push",
  "version": "1.0.7",
  "description": "A Remix PWA package to integrate push notifications into your application!",
  "homepage": "https://remix-pwa-docs.vercel.app/push",
  "repository": {
    "type": "git",
    "url": "https://github.com/remix-pwa/push"
  },
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "types": "./types/index.d.ts"
    },
    "./worker": {
      "default": "./lib/worker.js",
      "types": "./types/worker.d.ts"
    }
  },
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf lib types",
    "copy": "",
    "format": "prettier --write ./src",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build"
  },
  "peerDependencies": {
    "@remix-pwa/sw": "^1.0.0 || ^2.1.4",
    "@remix-run/dev": "^1.15.0 || ^2.0.0",
    "@remix-run/react": "^1.15.0 || ^2.0.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "web-push": "^3.6.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "remix",
    "remix-run",
    "pwa",
    "remix-pwa",
    "@remix-pwa",
    "push",
    "@remix-pwa/push"
  ]
}
